<p style="text-align: right"><%= link_to "LOGOUT", destroy_user_session_path, :method => :delete %></p>


<h1>Disaster Information Blog</h1>

    <% @posts.each do |post| %>
      <div>
        <p><b>email:</b><%= post.user.email %></p>
      </div>

      <div>
        <p><b>title:</b><%= post.title %></p>
      </div>

      <div>
        <p><b>content:</b><%= post.content %></p>
      </div>

      <div>
        <p><b>address:</b><%= post.address %></p>
      </div>
      <div>
        <p><b>Comments : </b><%= post.comments.count %></p>
      </div>
      <div>
        <button><%= link_to :comments, post_comments_path(post) %></button>
        <button><%= link_to "show ", post_path(post) %></button>
        <button><%= link_to "edit ", edit_post_path(post) if post.user == current_user %></button>
        <button>
          <%= form_for post, url: post_path(post), method: :delete do |f| %>
          <%= f.submit 'delete' %>
        </button>
        <% end %>
    <% end %> <br><br>

    <button><%= link_to 'New', new_post_path, class: 'btn btn-success mb-4' %></button>

  </div>
