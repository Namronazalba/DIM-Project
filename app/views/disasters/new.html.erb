<%= form_for @disaster, url: disasters_path, method: :post do |f| %>
  <% if @disaster.errors.any? %>
    <% @disaster.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :disaster_type %>
    <%= f.text_field :disaster_type, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>